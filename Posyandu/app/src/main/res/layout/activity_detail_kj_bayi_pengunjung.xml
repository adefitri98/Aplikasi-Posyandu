<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.pengunjung.DetailKjBayiPengunjung">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/tv_tgl_kunjungan_bayi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08 Nov 2019"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccent"/>
                </LinearLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Berat Badan (kg)"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=":"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:id="@+id/tv_berat_badan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:maxLines="2"
                            android:text=""
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Tinggi Badan (cm)"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=":"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:id="@+id/tv_tinggi_badan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=""
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Lingkar Kepala (cm)"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=":"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:id="@+id/tv_lingkar_kepala"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=""
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Umur Sekarang (Bulan)"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=":"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:id="@+id/tv_umur_sekarang"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=""
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Vitamin A"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=":"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:id="@+id/tv_vit_a"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=""
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Oralit"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=":"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:id="@+id/tv_oralit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=""
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Status Gizi"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=":"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                        <TextView
                            android:id="@+id/tv_status_gizi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=""
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>