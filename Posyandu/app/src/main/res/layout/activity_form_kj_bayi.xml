<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.kader.FormKjBayi">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <EditText
            android:id="@+id/et_id_kunjungan_bayi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id Kunjungan Bayi"
            android:textSize="15sp"
            android:visibility="gone"
            android:inputType="text"/>
        <EditText
            android:id="@+id/et_id_bayi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id Bayi"
            android:visibility="gone"
            android:textSize="15sp"
            android:inputType="text"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_tgl_kunjungan_bayi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Kunjungan"
                android:textSize="15sp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_berat_badan"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:hint="Berat Badan"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Kg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_tinggi_badan"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:hint="Tinggi Badan"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Cm"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_lingkar_kepala"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:hint="Lingkar Kepala"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Cm"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_umur_sekarang"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:hint="Umur Sekarang"
                    android:textSize="15sp"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Bulan"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_vertical"
            android:text="Vitamin A"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
        <RadioGroup
            android:id="@+id/rg_vitamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small">
            <RadioButton
                android:id="@+id/rb_ya_vit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Ya"/>
            <RadioButton
                android:id="@+id/rb_tidak_vit"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_vertical"
            android:text="Oralit"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
        <RadioGroup
            android:id="@+id/rg_oralit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small">
            <RadioButton
                android:id="@+id/rb_oralit_ya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Ya"/>
            <RadioButton
                android:id="@+id/rb_oralit_tidak"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak"/>
        </RadioGroup>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Status Gizi"/>
            <Spinner
                android:id="@+id/sp_status_gizi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/gizi"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_simpan_kj_bayi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Simpan"/>
        <Button
            android:id="@+id/btn_edit_kj_bayi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Edit"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>