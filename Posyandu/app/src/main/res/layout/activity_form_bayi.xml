<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.kader.FormBayi">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_nama_bayi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Bayi"
                android:textSize="15sp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_tgl_lahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Lahir"
                android:textSize="15sp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_vertical"
            android:text="Jenis Kelamin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
        <RadioGroup
            android:id="@+id/rg_jenis_kelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small">
            <RadioButton
                android:id="@+id/rb_laki_laki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Laki-Laki"/>
            <RadioButton
                android:id="@+id/rb_perempuan"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perempuan"/>
        </RadioGroup>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_nama_ibu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Ibu"
                android:textSize="15sp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_nama_ayah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Ayah"
                android:textSize="15sp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="16">
            <EditText
                android:id="@+id/et_kk_bayi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No Kartu Keluarga"
                android:textSize="15sp"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_alamat_bayi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat"
                android:textSize="15sp"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_anak_ke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Anak Ke"
                android:textSize="15sp"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_berat_lahir"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:hint="Berat Lahir"
                    android:textSize="15sp"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Kg"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_vertical"
            android:text="Status Bayi"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
        <RadioGroup
            android:id="@+id/rg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small">
            <RadioButton
                android:id="@+id/rb_sasaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Sasaran"/>
            <RadioButton
                android:id="@+id/rb_bukan_sasaran"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bukan Sasaran"/>
        </RadioGroup>
        <EditText
            android:id="@+id/et_id_bayi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id Bayi"
            android:textSize="15sp"
            android:visibility="gone"
            android:inputType="text"/>
        <Button
            android:id="@+id/btn_simpan_bayi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Simpan"/>
        <Button
            android:id="@+id/btn_edit_bayi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Edit"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>